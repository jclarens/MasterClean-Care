<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view_pesan"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#eeeeee"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:contentPadding="4dp"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:padding="5dp">
        <ImageView
            android:id="@+id/card_pesan_img"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/card_pesan_checkBox"
            android:layout_toRightOf="@+id/card_pesan_checkBox"
            android:contentDescription="@string/foto"
            app:srcCompat="@drawable/ic_closed_msg" />

        <CheckBox
            android:id="@+id/card_pesan_checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp" />

        <TextView
            android:id="@+id/card_pesan_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/card_pesan_img"
            android:layout_toEndOf="@+id/card_pesan_img"
            android:layout_toRightOf="@+id/card_pesan_img"
            android:text="Nama Pengirim"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/card_pesan_tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_pesan_nama"
            android:layout_toEndOf="@+id/card_pesan_img"
            android:layout_toRightOf="@+id/card_pesan_img"
            android:text="Tanggal"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/card_pesan_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_pesan_tanggal"
            android:layout_toEndOf="@+id/card_pesan_img"
            android:layout_toRightOf="@+id/card_pesan_img"
            android:text="subject"
            android:textColor="@android:color/black"
            android:textSize="12sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>